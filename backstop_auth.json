{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 375,
      "height": 667
    },
    {
      "label": "tablet",
      "width": 768,
      "height": 1024
    },
    {
      "label": "desktop",
      "width": 1440,
      "height": 1080
    }
  ],
  "onBeforeScript": "onBefore.js",
  "scenarios": [
    {
      "label": "homepage",
      "cookiePath": "config/cookies.json",
      "url": "%%URI%%",
      "removeSelectors": ["#admin-menu", "#messages"]
    }
  ],
  "paths": {
    "bitmaps_reference": "data/auth/bitmaps_reference",
    "bitmaps_test": "data/auth/bitmaps_test",
    "engine_scripts": "library/engine_scripts",
    "html_report": "data/auth/html_report",
    "ci_report": "data/auth/ci_report"
  },
  "report": ["browser", "CI"],
  "engine": "puppeteer",
  "engineOptions": {
    "ignoreHTTPSErrors": true,
    "args": [
      "--no-sandbox",
      "--disable-gpu",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage"
    ]
  },
  "engineFlags": [],
  "asyncCaptureLimit": 3,
  "asyncCompareLimit": 10,
  "debug": false,
  "debugWindow": false,
  "cliExitOnFail": true
}
